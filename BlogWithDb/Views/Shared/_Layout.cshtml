    <script src="lib/front/easing/easing.min.js"></script>
    <script src="lib/front/waypoints/waypoints.min.js"></script>
    <script src="lib/front/typed/typed.min.js"></script>
    <script src="lib/front/counterup/counterup.min.js"></script>
    <script src="lib/front/owlcarousel/owl.carousel.min.js"></script>
    <script src="lib/front/isotope/isotope.pkgd.min.js"></script>
    <script src="lib/front/lightbox/js/lightbox.min.js"></script>


    <script src="lib/front/main.js"></script>



    @await RenderSectionAsync("Scripts", required: false)
