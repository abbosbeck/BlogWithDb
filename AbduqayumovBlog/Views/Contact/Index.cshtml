@model BlogWithDb.Models.TelegramMessageModel;
@{
    ViewData["Title"] = "Contact";
}

<div class="container-xxl pb-5" id="contact">
        <div class="container py-5">
            <div class="row g-5 mb-5 wow fadeInUp" data-wow-delay="0.1s">
                <div class="col-lg-6">
                    <h1 class="display-5 mb-0">Let's Work Together</h1>
                </div>
                <div class="col-lg-6 text-lg-end">
                    <a class="btn btn-info py-3 px-5" href="https://t.me/Abduqayumov" target="_blank">Follow me on telegram!</a>
                </div>
            </div>
            <div class="row g-5">
                <div class="col-lg-5 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <p class="mb-2">My location:</p>
                    <h3 class="fw-bold">Tashkent, Uzbekistan</h3>
                    <hr class="w-100">
                    <p class="mb-2">Call me:</p>
                    <h3 class="fw-bold">+998 94 3425222</h3>
                    <hr class="w-100">
                    <p class="mb-2">Mail me:</p>
                    <h3 class="fw-bold">Abbosdev@yandex.com</h3>
                    <hr class="w-100">
                    <p class="mb-2">Follow me:</p>
                    <div class="d-flex pt-2">
                        <a class="btn btn-outline-info me-2" href="https://twitter.com/AAbbosbeck"><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-outline-info me-2" href="https://t.me/Abduqayumov"><i class="bi bi-telegram"></i></a>
                        <a class="btn btn-outline-info me-2" href="https://www.youtube.com/channel/UCm49Wyxy1D_q17wHLpOKcaw"><i class="fab fa-youtube"></i></a>
                        <a class="btn btn-outline-info me-2" href="https://www.linkedin.com/in/abbosbeck/"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-lg-7 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                    <p class="mb-4">Feel free to contact me if you have any further questions or feedback for my blog.</p>
                    <form asp-action="Index" asp-controller="Contact">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="@Model.Name" type="text" class="form-control" id="name" placeholder="Name" required>
                                    <label asp-for="@Model.Name">Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="@Model.Telegram" type="telegram" class="form-control" id="email" placeholder="Telegram username" required>
                                    <label asp-for="@Model.Telegram">Telegram username</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="@Model.Subject" type="text" class="form-control" id="subject" placeholder="Subject" required>
                                    <label asp-for="@Model.Subject">Subject</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="@Model.Message" class="form-control" placeholder="Leave a message here" id="message" style="height: 100px" required></textarea>
                                    <label asp-for="@Model.Message">Message</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-outline-info py-3 py-3 px-5" type="submit" onkeypress="xabar ketdi" value="Create">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

